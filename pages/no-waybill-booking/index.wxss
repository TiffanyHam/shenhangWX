
.platform-box {
  display: flex;
  padding: 20rpx 0;
  margin: 0 30rpx;
  justify-content: space-between;
  border-bottom: 1px solid #F0F0F0;
}

.platform-box .arrow-box  {
  width: 240rpx;
  text-align: center;
}

.platform-box .arrow-box image {
  display: inline-block;
  width:52rpx;
  height: 52rpx;
} 

.platform-box .end-platform {
 justify-items: flex-end;
 text-align: right;
}

.platform-box view .title {
  font-size: 36rpx;
  display: inline-block;
  width: 100px;
}

.flight-number text {
  display: inline-block;
  width: 185rpx;
  font-size: 32rpx;
}

.platform-box view input {
  font-size: 28rpx;
}

.flight-number {
  display: flex;
  width: 100%;
}

.picker .time {
  color: #919191;
  font-size: 28rpx;
}

.flight-number .picker text {
  width: 100%;
  padding-left: 40rpx;
  box-sizing: border-box;
}