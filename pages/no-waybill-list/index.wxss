.list-body {
  top: 0;
}

.list-item {
  padding: 0 20rpx;
  background: #fff;
}

.list-item .item {
  height: 40px;
  line-height: 40px;
  border-bottom: 1px solid #F0F0F0;
}

.list-item .line-item {
  display: flex;
  justify-content: space-between;
}

.list-item .item .name {
  font-size: 32rpx;
  color: #101010;
  width: 150rpx;
  display: inline-block;
  text-align: left;
}

.list-item .item .remaining-space {
  display: inline-block;
  width: 168rpx;
}

.list-item .head .name {
  font-size: 36rpx;
  font-weight: bold;
}

.list-item .item text {
  font-size: 28rpx;
  color: #888;
}

.list-item .item .label {
  float: right;
  font-size: 32rpx;
  color: #101010;
}

.list-item .btn-box {
  width: 100%;
  height: 40px;
  padding: 10rpx 0;
  border-bottom: 0;
}

.list-item .expand-btn {
  width: 190rpx;
  height: 70rpx;
  line-height: 70rpx;
  float: right;
  margin-left: 20rpx;
  font-size: 28rpx;
  color: #fff;
  background: #E64340;
  border-color: #E64340;
}

.list-item .cancel {
   background: #888;
  border-color: #888;
}

.remaining-space .item {
  display: flex;
  align-items: center;
}

.list-item .remaining-space .name {
  color: #0078D7;
}